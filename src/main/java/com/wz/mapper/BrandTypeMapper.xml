<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wz.dao.BrandTypeMapper">
	<resultMap id="BaseResultMap" type="com.wz.pojo.BrandType">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="status" jdbcType="INTEGER" property="status" />
		<result column="gmt_create" jdbcType="TIMESTAMP"
			property="gmtCreate" />
		<result column="category_id" jdbcType="INTEGER"
			property="categoryId" />
	</resultMap>
	<sql id="Base_Column_List">
		id, name, status, gmt_create, category_id
	</sql>
	<select id="selectByPrimaryKey"
		parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from a_brand_type
		where id = #{id,jdbcType=INTEGER}
	</select>
	<delete id="deleteByPrimaryKey"
		parameterType="java.lang.Integer">
		delete from a_brand_type
		where id = #{id,jdbcType=INTEGER}
	</delete>
	<insert id="insert" parameterType="com.wz.pojo.BrandType">
		insert into a_brand_type (id, name, status,
		gmt_create, category_id)
		values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},
		#{status,jdbcType=INTEGER},
		#{gmtCreate,jdbcType=TIMESTAMP}, #{categoryId,jdbcType=INTEGER})
	</insert>
	<insert id="insertSelective"
		parameterType="com.wz.pojo.BrandType">
		insert into a_brand_type
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="status != null">
				status,
			</if>
			<if test="gmtCreate != null">
				gmt_create,
			</if>
			<if test="categoryId != null">
				category_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				#{status,jdbcType=INTEGER},
			</if>
			<if test="gmtCreate != null">
				#{gmtCreate,jdbcType=TIMESTAMP},
			</if>
			<if test="categoryId != null">
				#{categoryId,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective"
		parameterType="com.wz.pojo.BrandType">
		update a_brand_type
		<set>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=INTEGER},
			</if>
			<if test="gmtCreate != null">
				gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},
			</if>
			<if test="categoryId != null">
				category_id = #{categoryId,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	<update id="updateByPrimaryKey"
		parameterType="com.wz.pojo.BrandType">
		update a_brand_type
		set name = #{name,jdbcType=VARCHAR},
		status = #{status,jdbcType=INTEGER},
		gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},
		category_id = #{categoryId,jdbcType=INTEGER}
		where id = #{id,jdbcType=INTEGER}
	</update>

	<!-- 根据类目id查询 -->
	<select id="findByCategoryId" resultMap="BaseResultMap">
		SELECT 
		    *
		FROM a_brand_type
		WHERE category_id = #{categoryId}
		AND `status` = 0
		ORDER BY id ASC
	</select>
	
	<!-- 分页查找 -->
	<select id="find" parameterType="com.wz.pojo.Page" resultMap="BaseResultMap">
	   select
		<include refid="Base_Column_List" />
		from a_brand_type
		limit #{pageIndex}, #{pageItemCount}
	</select>
	
	<!-- 更新状态 -->
	<update id="updateStatus">
	update a_brand_type set status = #{status} where id = #{id}
	</update>
	
	<select id="getByName" parameterType="java.lang.String" resultMap="BaseResultMap">
	 select * from a_brand_type where name = #{name}
	</select>
</mapper>